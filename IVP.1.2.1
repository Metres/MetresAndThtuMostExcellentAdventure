"""
dy/dt=sqrt(t)*y^2 0<t<4  -2<y<2
"""
import matplotlib.pyplot as plt
from scipy import *
from scipy import integrate
from scipy.integrate import ode
import numpy as np

fig = plt.figure(num=1)
ax=fig.add_subplot(111)

xmin=0; xmax=4;
ymin=-2;ymax=2;

X,Y = np.meshgrid( np.linspace(xmin,xmax,20),np.linspace(ymin,ymax,20) )
U = 1
V = np.sqrt(X)*Y**2
#Normalize arrows
N = np.sqrt(U**2+V**2)  
U2, V2 = U/N, V/N
ax.quiver( X,Y,U2, V2)


plt.xlim([xmin,xmax])
plt.ylim([ymin,ymax])
plt.xlabel(r"$x$")
plt.ylabel(r"$y$")
plt.show()